<Defs>
  
  <RecipeDef ParentName="SurgeryFlesh">
    <defName>DND_RepairGolemFleshFull</defName>
    <label>fully repair flesh golem</label>
    <description>Repair all injuries on a flesh golem using a large quantity of human flesh.</description>
    <workerClass>MoodndBehaviorsAndEvents.Recipe_FullHealInjuries</workerClass>
    <jobString>Repairing.</jobString>
    <workAmount>400</workAmount>
    <hideBodyPartNames>true</hideBodyPartNames>
    <targetsBodyPart>false</targetsBodyPart>
    <surgerySuccessChanceFactor>99999</surgerySuccessChanceFactor>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Meat_Human</li>
					</thingDefs>
				</filter>
				<count>600</count>
			</li>
		</ingredients>
  </RecipeDef>


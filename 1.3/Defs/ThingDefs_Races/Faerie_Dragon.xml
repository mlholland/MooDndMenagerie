			<foodType>VegetarianRoughAnimal</foodType>
			<wildness>0.85</wildness>
      <nuzzleMtbHours>12</nuzzleMtbHours>
			<manhunterOnDamageChance>0.2</manhunterOnDamageChance>
			<manhunterOnTameFailChance>.01</manhunterOnTameFailChance>

<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="AnimalThingBase">
		<defName>DND_Spectator</defName>
		<label>Spectator</label>
    <description>Spectators are weaker relatives of beholders. Their orb-like head is four feet in diameter, and they only have 4 eyestalks. They can be pulled from whatever dimension they hail from by constructing an effigy in their likeness using the eyestalks of a killed beholder. Spectators that are summoned this way are loyal to their summoner, and will fight for them.</description>
    <statBases>
			<MoveSpeed>4.3</MoveSpeed>
			<ComfyTemperatureMin>-10</ComfyTemperatureMin>
			<ComfyTemperatureMax>100</ComfyTemperatureMax>
			<MarketValue>800</MarketValue>
      <FilthRate>1</FilthRate>
      <MeatAmount>0</MeatAmount>
		</statBases>
		<race>
			<herdAnimal>false</herdAnimal>
			<predator>false</predator>
			<body>DND_SpectatorBody</body>
			<packAnimal>false</packAnimal>
			<baseBodySize>1.5</baseBodySize>
			<baseHealthScale>1.5</baseHealthScale>
			<baseHungerRate>0.01</baseHungerRate>
			<foodType>OmnivoreRoughAnimal</foodType>
			<wildness>.2</wildness>
			<manhunterOnDamageChance>.9</manhunterOnDamageChance>
			<manhunterOnTameFailChance>.2</manhunterOnTameFailChance>
			<trainability>Advanced</trainability>
			<lifeExpectancy>100</lifeExpectancy>
			<lifeStageAges>
				<li>
					<def>AnimalAdult</def>
					<minAge>0</minAge>
          <soundWounded>Pawn_Warg_Wounded</soundWounded>
          <soundDeath>Pawn_Warg_Death</soundDeath> 
          <soundAngry>Pawn_Warg_Angry</soundAngry>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
      <hasGenders>false</hasGenders>
    </race>
    <verbs>
      <li>
        <label>Enervation Ray</label>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>DND_SpectatorEnervationRay</defaultProjectile>
        <warmupTime>1.5</warmupTime>
        <range>25.9</range>
        <burstShotCount>3</burstShotCount>
        <soundCast>DND_SpectatorRay_Fire1</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <accuracyTouch>.98</accuracyTouch>
        <accuracyShort>.98</accuracyShort>
        <accuracyMedium>.98</accuracyMedium>
        <accuracyLong>.98</accuracyLong>
        <minRange>1</minRange>
        <commonality>1</commonality>
        <defaultCooldownTime>2</defaultCooldownTime>
      </li>
      <li>
        <label>Slow Ray</label>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>DND_BeholderSlowRay</defaultProjectile>
        <warmupTime>1.5</warmupTime>
        <range>25.9</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>DND_SpectatorRay_Fire1</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <accuracyTouch>.99</accuracyTouch>
        <accuracyShort>.99</accuracyShort>
        <accuracyMedium>.99</accuracyMedium>
        <accuracyLong>.99</accuracyLong>
        <minRange>1</minRange>
        <commonality>1</commonality> 
    </li>
      <li>
        <label>Fear Ray</label>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>DND_BeholderFearRay</defaultProjectile>
        <warmupTime>1.5</warmupTime>
        <range>25.9</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>DND_SpectatorRay_Fire1</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <accuracyTouch>.99</accuracyTouch>
        <accuracyShort>.99</accuracyShort>
        <accuracyMedium>.99</accuracyMedium>
        <accuracyLong>.99</accuracyLong>
        <minRange>1</minRange>
        <commonality>1</commonality> 
      </li>
    </verbs>
    <tools>
      <li>
        <label>teeth</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>9.7</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.07</chanceFactor>
        <soundMeleeHit>Pawn_Melee_HumanBite_Hit</soundMeleeHit>
        <soundMeleeMiss>Pawn_Melee_HumanBite_Miss</soundMeleeMiss>
      </li>
      <li>
        <label>slam</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>DND_BodySlamTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.1</chanceFactor>
      </li>
    </tools>
    <comps>
      <li Class="AnimalBehaviours.CompProperties_Floating"></li>
    </comps>
    <tradeTags></tradeTags>
	</ThingDef>


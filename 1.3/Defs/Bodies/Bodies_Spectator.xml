          <height>Bottom</height>
          <parts>
            <li>
              <def>Eye</def>
              <customLabel>second lower eye</customLabel>
              <depth>Outside</depth>
              <coverage>0.15</coverage>
              <groups>
                <li>DND_EyestalkGroup</li>
              </groups>
            </li>
          </parts>
        </li> 
      </parts>
        
    </corePart>
  </BodyDef>

</Defs>
<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef  ParentName="OrganicProductBase">
    <defName>DND_FlumphInk</defName>
    <label>flumph "ink"</label>
    <description>The acidic secretions of a flumph. Although it is not useful on its own, it contains trace amounts of psychic-boosting chemicals which can be refined into psy-kick, a powerful consciousness-amplifying drug</description>
    <graphicData>
      <texPath>Things/Item/DND_FlumphInk</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>1.1</drawSize>
    </graphicData>
    <stackLimit>75</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <MarketValue>4</MarketValue>
      <Mass>0.02</Mass>
      <Flammability>0.2</Flammability>
      <DeteriorationRate>1.0</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="ResourceBase">
    <defName>DND_BeholderEyestalk</defName>
    <label>Beholder Eyestalk</label>
    <description>An eyestalk from a beholder, eye included. There are rumors that weaker beholderkin can be summoned using these.</description>
    <graphicData>
      <texPath>Things/Item/Health/HealthItem</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.80</drawSize>
      <color>(189,169,118)</color>
    </graphicData>
    <stackLimit>20</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <MarketValue>150</MarketValue>
      <Mass>1</Mass>
      <Flammability>1</Flammability>
      <DeteriorationRate>1.0</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <thingSetMakerTags>
      <li>AnimalPart</li>
    </thingSetMakerTags>
  </ThingDef>

  <ThingDef ParentName="EggFertBase">
    <defName>DND_EggOwlbearFertilized</defName>
    <label>owlbear egg (fert.)</label>
    <description>A fertilized owlbear egg. This egg is huge, and can fetch a high price among collectors. If all goes well, it should hatch into an owlbear chick. It can be eaten raw, but it's much better cooked.</description>
    <graphicData>
      <color>(245,245,245)</color>
      <drawSize>2</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>250.0</MarketValue>
      <Mass>3</Mass>
      <MaxHitPoints>60</MaxHitPoints>
      <Nutrition>1.5</Nutrition>
    </statBases>
    <comps>
      <li Class="CompProperties_Hatcher">
        <hatcherDaystoHatch>10</hatcherDaystoHatch>
        <hatcherPawn>DND_Owlbear</hatcherPawn>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="EggFertBase">
    <defName>DND_EggFaerieDragonFertilized</defName>
    <label>Faerie Dragon egg (fert.)</label>
    <description>A colorful fertilized faerie dragon egg. If all goes well, it should hatch into a faerie dragon wyrmling. It can be eaten raw, but it's much better cooked.</description>
    <graphicData>
      <color>(140, 77, 189)</color>
    </graphicData>
    <comps>
      <li Class="CompProperties_Hatcher">
        <hatcherDaystoHatch>15</hatcherDaystoHatch>
        <hatcherPawn>DND_FaerieDragon</hatcherPawn>
      </li>
    </comps>
  </ThingDef>



</Defs>

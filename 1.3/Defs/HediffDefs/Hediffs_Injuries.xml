<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef ParentName="InjuryBase">
    <defName>DND_Necrosis</defName>
    <label>necrosis</label>
    <labelNoun>sudden necrosis</labelNoun>
    <description>Sudden necrosis has left large sections of tissue decaying on the body. This is more likely to get infected than other injuries, and more painful.</description>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <labelTendedWell>Cleaned</labelTendedWell>
        <labelTendedWellInner>Cleaned</labelTendedWellInner>
        <labelSolidTendedWell>Disinfected</labelSolidTendedWell>
      </li>
      <li Class="HediffCompProperties_Infecter">
        <infectionChance>0.25</infectionChance>
      </li>
      <li Class="HediffCompProperties_GetsPermanent">
        <permanentLabel>necrosis scar</permanentLabel>
      </li>
    </comps>
    <injuryProps>
      <painPerSeverity>0.0175</painPerSeverity>
      <averagePainPerSeverityPermanent>0.00625</averagePainPerSeverityPermanent>
      <bleedRate>0.06</bleedRate>
      <canMerge>false</canMerge>
      <destroyedLabel>Rotted Away</destroyedLabel>
      <destroyedOutLabel>Rotted AWay</destroyedOutLabel>
    </injuryProps>
  </HediffDef>

  <HediffDef ParentName="InjuryBase">
    <defName>DND_Disintegration</defName>
    <label>disintegration</label>
    <labelNoun>rapid disintegration</labelNoun>
    <description>Disintegrated Flesh.</description>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <labelTendedWell>Cleaned</labelTendedWell>
        <labelTendedWellInner>Cleaned</labelTendedWellInner>
        <labelSolidTendedWell>Disinfected</labelSolidTendedWell>
      </li>
      <li Class="HediffCompProperties_Infecter">
        <infectionChance>0.0</infectionChance>
      </li>
      <li Class="HediffCompProperties_GetsPermanent">
        <permanentLabel>necrosis scar</permanentLabel>
      </li>
    </comps>
    <injuryProps>
      <painPerSeverity>0.0175</painPerSeverity>
      <averagePainPerSeverityPermanent>0.00625</averagePainPerSeverityPermanent>
      <bleedRate>0.06</bleedRate>
      <canMerge>false</canMerge>
      <destroyedLabel>Disintegrated</destroyedLabel>
      <destroyedOutLabel>Disintegrated</destroyedOutLabel>
    </injuryProps>
  </HediffDef>

  <HediffDef ParentName="InjuryBase">
    <defName>DND_BodyRusting</defName>
    <label>rust</label>
    <labelNoun>rapid rusting</labelNoun>
    <description>This metallic body part was hit by a rapid-rusting chemical of some sort, causing immense damage.</description>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <labelTendedWell>Cleaned</labelTendedWell>
        <labelTendedWellInner>Cleaned</labelTendedWellInner>
        <labelSolidTendedWell>Disinfected</labelSolidTendedWell>
      </li>
      <li Class="HediffCompProperties_Infecter">
        <infectionChance>0.0</infectionChance>
      </li>
      <li Class="HediffCompProperties_GetsPermanent">
        <permanentLabel>rust wounds</permanentLabel>
      </li>
    </comps>
    <injuryProps>
      <painPerSeverity>0.0175</painPerSeverity>
      <averagePainPerSeverityPermanent>0.00625</averagePainPerSeverityPermanent>
      <bleedRate>0.00</bleedRate>
      <canMerge>false</canMerge>
      <destroyedLabel>Rusted Away</destroyedLabel>
      <destroyedOutLabel>Rusted Away</destroyedOutLabel>
    </injuryProps>
  </HediffDef>
</Defs>

<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>DND_GolemBuildingFlesh</defName>
    <label>dormant flesh golen</label>
    <description>A archomechanite-animated golem constructed from human flesh. It can be sold now in its dormant state, or awakened to guard the colony. Golems are only loyal to the people that summoned them,so they cannot be sold once awakened.</description>
    <graphicData>
      <texPath>Things/Building/Misc/ToolCabinet</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2,1)</drawSize>
      <color>(96,0,0)</color>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.35</staticSunShadowHeight>
    <fillPercent>0.5</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <pathCost>42</pathCost>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <WorkToBuild>20000</WorkToBuild>
      <Mass>110</Mass>
      <Flammability>2</Flammability>
    </statBases>
    <size>(2,1)</size>
    <costList>
      <Meat_Human>600</Meat_Human>
      <DND_TomeGolemFlesh>1</DND_TomeGolemFlesh>
    </costList>
    <building>
      <destroySound>BuildingDestroyed_Metal_Small</destroySound>
    </building>
    <designationCategory>Security</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <comps>
        <li Class="MoodndBehaviorsAndEvents.CompProperties_AwakeableGolem">
          <CreatureDef>DND_GolemFlesh</CreatureDef>
        </li>
    </comps>
    <designationHotKey>Misc6</designationHotKey>
    <tradeability>Sellable</tradeability>
    <tradeTags>
      <li>ExoticBuilding</li>
    </tradeTags>
  </ThingDef>
  
